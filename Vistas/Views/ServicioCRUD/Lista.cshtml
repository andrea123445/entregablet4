
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_LayoutServicio.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="pt-5 col-md-12 table-responsive">
            <div class="pt-3 pr-5 pb-2 row justify-content-end">
                <a href="/ServicioCRUD/Agregar" class="btn btn-primary">Agregar</a>
            </div>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Informacion</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Precio</td>
                            <td>@item.Informacion</td>
                            <td><a href="/ServicioCRUD/Editar?id=@item.Id">Editar</a></td>
                            <td><a href="/ServicioCRUD/Eliminar?id=@item.Id">>Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
